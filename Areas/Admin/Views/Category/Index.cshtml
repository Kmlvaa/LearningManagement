@model LearningManagement.Areas.Admin.Models.CategoryIndexVM
<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-2">
            <div class="bg-secondary rounded d-flex align-items-center p-4 justify-content-center">
                <div class="d-flex justify-content-center align-items-center">
                    <a asp-controller="Category" asp-action="Add" style="color:white" class="btn btn-danger">Add Category</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->
<!-- Widgets Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-md-6 col-xl-4">
            <!-- Category Section Begin -->
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Categories</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">Name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.Categories)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>
                                            <a class="btn btn-sm btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                            <a class="btn btn-sm btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
            <!-- Category Section End -->
        </div>
    </div>
</div>
<!-- Widgets End -->
